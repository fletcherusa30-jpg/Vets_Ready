# Vets Ready - Environment Configuration
# Copy this file to .env and update with your values

# ============================================================================
# APPLICATION SETTINGS
# ============================================================================
APP_NAME="Vets Ready"
APP_VERSION="1.0.0"
ENVIRONMENT="development"  # development, staging, production
DEBUG=True
LOG_LEVEL="INFO"

# ============================================================================
# DATABASE CONFIGURATION
# ============================================================================
# PostgreSQL (Production)
DATABASE_URL="postgresql://vetsready:your_password@localhost:5432/vetsready_db"

# SQLite (Development - comment out DATABASE_URL above to use this)
# DATABASE_URL="sqlite:///./vetsready.db"

# ============================================================================
# SECURITY & AUTHENTICATION
# ============================================================================
# Generate a secure secret key: python -c "import secrets; print(secrets.token_urlsafe(32))"
JWT_SECRET="your-super-secret-jwt-key-change-this-in-production"
JWT_ALGORITHM="HS256"
JWT_EXPIRATION_HOURS=24

# Password hashing (already using bcrypt)
PASSWORD_MIN_LENGTH=8

# CORS settings
CORS_ORIGINS="http://localhost:3000,http://localhost:5173,http://localhost:8100"
CORS_ALLOW_CREDENTIALS=True

# ============================================================================
# STRIPE PAYMENT INTEGRATION
# ============================================================================
STRIPE_SECRET_KEY="sk_test_your_stripe_secret_key"
STRIPE_PUBLISHABLE_KEY="pk_test_your_stripe_publishable_key"
STRIPE_WEBHOOK_SECRET="whsec_your_webhook_secret"

# Stripe Price IDs (create these in Stripe Dashboard)
STRIPE_PRICE_VETERAN_PRO_YEARLY="price_xxx"
STRIPE_PRICE_VETERAN_FAMILY_YEARLY="price_xxx"
STRIPE_PRICE_VETERAN_LIFETIME="price_xxx"

STRIPE_PRICE_EMPLOYER_BASIC="price_xxx"
STRIPE_PRICE_EMPLOYER_PREMIUM="price_xxx"
STRIPE_PRICE_EMPLOYER_RECRUITING="price_xxx"
STRIPE_PRICE_EMPLOYER_ENTERPRISE="price_xxx"

STRIPE_PRICE_BUSINESS_BASIC="price_xxx"
STRIPE_PRICE_BUSINESS_FEATURED="price_xxx"
STRIPE_PRICE_BUSINESS_PREMIUM="price_xxx"
STRIPE_PRICE_BUSINESS_ADVERTISING="price_xxx"

# ============================================================================
# EMAIL CONFIGURATION (for notifications)
# ============================================================================
SMTP_HOST="smtp.gmail.com"
SMTP_PORT=587
SMTP_USER="your-email@gmail.com"
SMTP_PASSWORD="your-app-password"
SMTP_FROM_EMAIL="noreply@vetsready.com"
SMTP_FROM_NAME="Vets Ready"

# ============================================================================
# AWS S3 (for document storage)
# ============================================================================
AWS_ACCESS_KEY_ID="your-aws-access-key"
AWS_SECRET_ACCESS_KEY="your-aws-secret-key"
AWS_REGION="us-east-1"
AWS_S3_BUCKET="vetsready-documents"

# ============================================================================
# AI ENGINE CONFIGURATION
# ============================================================================
OPENAI_API_KEY="sk-your-openai-api-key"  # Optional: for enhanced AI features
HUGGINGFACE_API_KEY="your-huggingface-key"  # Optional: for local AI models

# CFR Data source
CFR_DATA_PATH="./ai-engine/data/cfr"
CFR_UPDATE_INTERVAL_DAYS=30

# ============================================================================
# ANALYTICS & MONITORING
# ============================================================================
SENTRY_DSN=""  # Optional: for error tracking
GOOGLE_ANALYTICS_ID=""  # Optional: for web analytics

# ============================================================================
# RATE LIMITING
# ============================================================================
RATE_LIMIT_ENABLED=True
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_BURST=10

# ============================================================================
# REDIS (for caching - optional)
# ============================================================================
REDIS_URL="redis://localhost:6379"
CACHE_ENABLED=False

# ============================================================================
# FILE UPLOAD LIMITS
# ============================================================================
MAX_UPLOAD_SIZE_MB=10
ALLOWED_EXTENSIONS="pdf,doc,docx,jpg,jpeg,png"

# ============================================================================
# FEATURE FLAGS
# ============================================================================
FEATURE_AI_CLAIMS_STRATEGY=True
FEATURE_OCR_EXTRACTION=False  # Coming in Phase 2
FEATURE_DBQ_AUTOFILL=False  # Coming in Phase 2
FEATURE_MARKETPLACE=False  # Coming in Phase 2

# ============================================================================
# DEVELOPMENT TOOLS
# ============================================================================
# Auto-reload on code changes
RELOAD=True

# Show detailed SQL queries
SQLALCHEMY_ECHO=False

# ============================================================================
# PRODUCTION DEPLOYMENT
# ============================================================================
# Domain configuration
DOMAIN="vetsready.com"
API_BASE_URL="https://api.vetsready.com"
FRONTEND_URL="https://app.vetsready.com"

# SSL/TLS
SSL_CERT_PATH="/etc/letsencrypt/live/vetsready.com/fullchain.pem"
SSL_KEY_PATH="/etc/letsencrypt/live/vetsready.com/privkey.pem"

# Workers (for production uvicorn)
WORKERS=4

# ============================================================================
# NOTES
# ============================================================================
# 1. Never commit .env file to version control
# 2. Keep .env.example updated with new variables (without sensitive values)
# 3. Use different JWT_SECRET for each environment
# 4. In production, set DEBUG=False and ENVIRONMENT=production
# 5. Use strong passwords and rotate secrets regularly
