{
  "name": "vets-ready-platform",
  "version": "1.0.0",
  "description": "Vets Ready - Veteran-first benefits guide, claims readiness, and life planning ecosystem",
  "type": "module",
  "scripts": {
    "dev": "cd vets-ready-frontend && npm run dev",
    "dev:backend": "cd vets-ready-backend && python -m uvicorn app.main:app --reload",
    "dev:all": "concurrently \"npm run dev\" \"npm run dev:backend\"",
    "build": "cd vets-ready-frontend && npm run build",
    "build:frontend": "cd vets-ready-frontend && tsc && vite build",
    "preview": "cd vets-ready-frontend && vite preview",
    "type-check": "cd vets-ready-frontend && tsc --noEmit",
    "lint": "cd vets-ready-frontend && eslint src --ext ts,tsx --report-unused-disable-directives",
    "format": "prettier --write 'vets-ready-frontend/src/**/*.{ts,tsx,json,css,md}'",
    "test": "cd vets-ready-frontend && vitest",
    "test:ui": "cd vets-ready-frontend && vitest --ui",
    "test:coverage": "cd vets-ready-frontend && vitest --coverage",
    "test:backend": "cd vets-ready-backend && pytest"
  },
  "dependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "zustand": "^4.4.0",
    "zod": "^3.22.0",
    "recharts": "^2.10.0",
    "@tanstack/react-query": "^5.28.0",
    "axios": "^1.6.0",
    "classnames": "^2.3.0",
    "date-fns": "^2.30.0",
    "lucide-react": "^0.294.0",
    "tailwindcss": "^3.3.0"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "@vitejs/plugin-react": "^4.1.0",
    "@vitest/ui": "^1.0.0",
    "autoprefixer": "^10.4.0",
    "eslint": "^8.50.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "postcss": "^8.4.0",
    "prettier": "^3.0.0",
    "typescript": "^5.2.0",
    "vite": "^5.0.0",
    "vitest": "^1.0.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}
