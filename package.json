{
  "name": "rally-forge",
  "version": "1.0.0",
  "description": "Rally Forge - Comprehensive Veteran Support Platform | Benefits, Disabilities, Employment, Education & More",
  "type": "module",
  "scripts": {
    "dev": "cd rally-forge-frontend && npm run dev",
    "dev:backend": "cd rally-forge-backend && python -m uvicorn app.main:app --reload",
    "dev:all": "concurrently \"npm run dev\" \"npm run dev:backend\"",
    "start": "npm run dev:all",
    "build": "cd rally-forge-frontend && npm run build",
    "build:frontend": "cd rally-forge-frontend && tsc && vite build",
    "build:backend": "cd rally-forge-backend && pip install -r requirements.txt",
    "preview": "cd rally-forge-frontend && vite preview",
    "type-check": "cd rally-forge-frontend && tsc --noEmit",
    "lint": "cd rally-forge-frontend && eslint src --ext ts,tsx --report-unused-disable-directives",
    "format": "prettier --write 'rally-forge-frontend/src/**/*.{ts,tsx,json,css,md}'",
    "test": "cd rally-forge-frontend && vitest",
    "test:ui": "cd rally-forge-frontend && vitest --ui",
    "test:coverage": "cd rally-forge-frontend && vitest --coverage",
    "test:backend": "cd rally-forge-backend && pytest"
  },
  "dependencies": {
    "@tanstack/react-query": "^5.90.20",
    "axios": "^1.13.4",
    "classnames": "^2.5.1",
    "date-fns": "^4.1.0",
    "lucide-react": "^0.563.0",
    "react": "^19.2.4",
    "react-dom": "^19.2.4",
    "recharts": "^3.7.0",
    "tailwindcss": "^4.1.18",
    "zod": "^4.3.6",
    "zustand": "^5.0.10"
  },
  "devDependencies": {
    "@types/node": "^25.0.10",
    "@types/react": "^19.2.10",
    "@types/react-dom": "^19.2.3",
    "@typescript-eslint/eslint-plugin": "^8.54.0",
    "@typescript-eslint/parser": "^8.54.0",
    "@vitejs/plugin-react": "^5.1.2",
    "@vitest/ui": "^4.0.18",
    "autoprefixer": "^10.4.23",
    "concurrently": "^9.2.1",
    "eslint": "^9.39.2",
    "eslint-plugin-react-hooks": "^7.0.1",
    "postcss": "^8.5.6",
    "prettier": "^3.8.1",
    "typescript": "^5.9.3",
    "vite": "^7.3.1",
    "vitest": "^4.0.18"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}
