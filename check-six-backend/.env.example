# PhoneApp Backend Environment Variables

# Environment
ENVIRONMENT=development
DEBUG=true

# Database
DATABASE_URL=sqlite:///./instance/dev.db
# For PostgreSQL: postgresql://user:password@localhost:5432/phoneapp

# Security (CHANGE IN PRODUCTION!)
JWT_SECRET=your-super-secret-key-change-in-production-minimum-32-characters-long
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=24

# CORS
CORS_ORIGINS=http://localhost:5173,http://localhost:3000,http://localhost:3001,http://127.0.0.1:5173

# Logging
LOG_LEVEL=INFO

# Features
ENABLE_AI_ENGINE=true
